---
import { type Todo } from '@utils/types';

interface Props {
    todo: Todo
}
const { todo } = Astro.props;
---

<li class="flex flex-col gap-1 py-2 px-4
    border-solid border border-slate-400
    hover:border-stone-600 rounded-xl md:rounded-2xl"
>
    <div class="flex">
        <h2 class="text-lg font-bold" set:html={todo.id} />
        <a
            class="size-8 flex justify-center items-center ml-auto rounded-full
                bg-gray-50 hover:bg-gray-100 hover:scale-110 hover:rotate-45
                duration-300 group"
            href={`/todo/${todo.id}`}
        >
            <svg
                class="group-hover:size-6"
                xmlns="http://www.w3.org/2000/svg" width="24" height="24">
                <path d="M7 7h8.586L5.293 17.293l1.414 1.414L17 8.414V17h2V5H7v2z"/>
            </svg>
        </a>
    </div>
    <p class="text-base" set:html={todo.title} />
</li>
